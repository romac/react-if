{
  "name": "react-if",
  "version": "4.0.1",
  "description": "ðŸŒ— Render React components conditionally",
  "author": "Romain Ruetschi <romain.ruetschi@gmail.com>",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/react-if.esm.js",
  "typings": "dist/index.d.ts",
  "homepage": "https://github.com/romac/react-if",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "tsdx watch --tsconfig ./src/tsconfig.json",
    "build": "tsdx build --tsconfig ./src/tsconfig.json",
    "test": "tsdx test",
    "lint": "tsdx lint src test demo --fix",
    "format": "prettier --write {src,tests}/**/*.{ts,tsx}",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "update": "yarn upgrade-interactive --latest",
    "docs": "typedoc",
    "sversion": "standard-version",
    "commit": "git-cz",
    "cz": "git-cz",
    "prepublishOnly": "yarn build && pinst --disable",
    "postinstall": "husky install .github/husky",
    "postpublish": "pinst --enable"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@sapphire/eslint-config": "^2.1.1",
    "@sapphire/prettier-config": "^1.0.6",
    "@sapphire/ts-config": "^2.0.0",
    "@size-limit/preset-small-lib": "^4.9.2",
    "@types/enzyme": "^3.10.8",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/node": "^14.14.27",
    "@types/react": "^16.14.4",
    "@types/react-dom": "^16.9.11",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "cz-conventional-changelog": "^3.3.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "enzyme-to-json": "^3.6.1",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^5.0.9",
    "jest-enzyme": "^7.1.2",
    "lint-staged": "^10.5.4",
    "pinst": "^2.1.4",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "size-limit": "^4.9.2",
    "standard-version": "^9.1.0",
    "tsdx": "^0.14.1",
    "typedoc": "^0.20.24",
    "typedoc-plugin-nojekyll": "^1.0.1",
    "typescript": "^4.1.5"
  },
  "engines": {
    "node": ">=10"
  },
  "peerDependencies": {
    "react": "^16.x || ^17.x"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{mjs,js,ts}": "eslint --fix --ext mjs,js,ts"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "size-limit": [
    {
      "path": "dist/react-if.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/react-if.esm.js",
      "limit": "10 KB"
    }
  ],
  "resolutions": {
    "@types/react-dom": "^16.9.11",
    "@types/react": "^16.14.4",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "acorn": "^6.4.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint": "^7.18.0",
    "kind-of": "^6.0.3",
    "lodash": "^4.17.20",
    "minimist": "^1.2.5",
    "react-dom": "^16.14.0",
    "react": "^16.14.0"
  }
}
