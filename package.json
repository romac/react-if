    "tsdx": "^0.14.1",
    "typedoc": "^0.22.15",
    "typescript": "^4.6.3"
  },
  "engines": {
    "node": ">=12"
  },
  "peerDependencies": {
    "react": "^16.x || ^17.x || ^18.x"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{mjs,js,ts}": "eslint --fix --ext mjs,js,ts"
  },
