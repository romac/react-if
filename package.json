  "main": "dist/index.js",
  "module": "dist/react-if.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    "import": "./dist/react-if.esm.js",
    "require": "./dist/index.js",
    "types": "./dist/index.d.ts"
